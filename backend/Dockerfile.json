# Use the official Python base image
FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install system dependencies for Playwright
RUN apt-get update && \
    apt-get install -y wget gnupg curl ca-certificates \
    libnss3 libatk-bridge2.0-0 libgtk-3-0 libxss1 libasound2 \
    libx11-xcb1 libxcomposite1 libxdamage1 libxrandr2 libgbm1 \
    libpango-1.0-0 libcairo2 libatk1.0-0 libatspi2.0-0 \
    fonts-liberation libappindicator3-1 libxshmfence1 lsb-release \
    xvfb && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Set working directory for the app
WORKDIR /app

# Copy only requirements first for caching
COPY backend/requirements.txt .

# Install Python dependencies
RUN pip install --upgrade pip && pip install -r requirements.txt

# Install Playwright and Chromium with dependencies
RUN pip install playwright && \
    playwright install chromium && \
    playwright install-deps

# Copy entire project
COPY backend/ .

# Expose port
EXPOSE 8000

# Start FastAPI app
CMD ["uvicorn", "main:app", "--host=0.0.0.0", "--port=8000"]


