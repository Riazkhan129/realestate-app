# Use the official Python base image
FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install system dependencies for Playwright
RUN apt-get update && \
    apt-get install -y wget gnupg libnss3 libatk-bridge2.0-0 libgtk-3-0 libxss1 libasound2 libx11-xcb1 libxcomposite1 libxdamage1 libxrandr2 libgbm1 libpango-1.0-0 libcairo2 libatk1.0-0 libatspi2.0-0 fonts-liberation libappindicator3-1 libxshmfence1 lsb-release xvfb && \
    apt-get clean

# Set working directory for the app
WORKDIR /app

# Copy full project into /app
COPY . .

# Install Python dependencies
RUN pip install --upgrade pip && pip install -r requirements.txt

# Install Playwright and Chromium
RUN pip install playwright && playwright install --with-deps chromium

# Set working directory to /app/backend to run main.py
WORKDIR /app/backend

# Run the FastAPI app from backend/main.py
CMD ["uvicorn", "main:app", "--host=0.0.0.0", "--port=8000"]


